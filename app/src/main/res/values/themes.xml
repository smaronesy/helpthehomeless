<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelpTheHomeless" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/statusbar_and_toolbar</item>
        <item name="colorPrimaryVariant">#74858E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusbar_and_toolbar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HelpTheHomeless.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HelpTheHomeless.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HelpTheHomeless.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:dropDownListViewStyle">@style/spinner_popup_style</item>
        <item name="android:dropDownVerticalOffset">32dp</item>
        <item name="android:popupBackground">#E8F3FB</item>
        <item name="android:spinnerItemStyle">@style/spinner_item_style</item>
    </style>

    <style name="spinner_popup_style" parent="Widget.AppCompat.PopupMenu">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">5dp</item>
    </style>

    <style name="spinner_item_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:background">@drawable/spinner_border</item>
    </style>

</resources>