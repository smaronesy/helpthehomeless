<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.addhomeless.savephoto.UploadHomelessPhotoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/camera_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_photo_camera_128"/>
            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#69CDCD"
                android:layout_marginTop="15dp"
                android:text="Take Photo"/>

            <ImageView
                android:id="@+id/library_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_photo_library_128" />

            <Button
                android:id="@+id/btn_choose_photo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_image"
                android:backgroundTint="#69CDCD"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="Choose Photo"/>

            <Button
                android:id="@+id/save_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_choose_photo"
                android:textColor="@color/black"
                android:backgroundTint="#CDCDCD"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:text="Save Profile"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>